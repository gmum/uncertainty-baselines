{
    "exp": {
        "phases": ["tune","train","cal","eval","cal_eval"],
        "output_dir": "outdir",
        "load_data": true,
        "save_model": true,
        "save_weights_only": true,
        "seed": 1337,
        "use_early_stopping": false,
        "save_checkpoints": false,
        "use_tensorboard": false,
        "tune_hyperparams": false
    },
    
    "model": {
        "name": "resnet20",
        "pretrained": false,
        "model_file": "outdir/model"
    },
    
    "activation": "relu",
    "certainty_variant": "partial",
    "model_variant": "1vsall",
    "logit_variant": "affine",
    
    "dataset": "cifar10",
    "validation_percent": 0.1,
    "augment_train": true,
    "train_dataset": "cifar10",
    "eval_dataset": "cifar10",
    
    "optimizer": {
        "name": "adam",
        "learning_rate": 0.1,
        "lr_scheduler": "piecewise_linear",
        "momentum": 0.9,
        "beta_1": 0.9,
        "epsilon": 0.001
    },
    
    "weight_decay": 0.0001,
    
    "train_params": {
        "epochs": 1,
        "batch_size": 512,
        "eval_batch_size": 100,
        "eval_frequency": 100,
        "steps_per_epoch": 351,
        "validation_steps": 50,
        "test_steps": 100
    },
    
    "ece_bins": 15,
    "tb_patience": 50,
    
    "tune": {
        "dir": "tune_dir",
        "subdir": "subdir",
        "epochs": 50,
        "batch_size": 512,
        "by_metric": "acc",
        "num_trials": 6
    },
    
    "cal": {
        "variant": "nonlin",
        "pretrained": false,
        "model_file": "outdir/calibrator.ckpt",
        "model_output": "certs",
        "train_dataset": "cifar10",
        "append_random_dataset": true,
        "random_fraction": 0.1,
        "epochs": 20,
        "dataset_bins": 0,
        "basis_type": "uniform",
        "basis_params": [-20,20,20],
        "train_basis": true
        
    }
}